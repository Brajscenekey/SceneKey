<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMyProfile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_pop_up_profile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/txt_dimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black90p"
            android:text="f \n  f"
            android:textColor="@color/transparent"
            android:textSize="@dimen/_300sdp" />



        <!--android:background="@drawable/background_circle_white"-->
        <LinearLayout
            android:id="@+id/profileLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_85sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:textColor="@color/white"/>


            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/cross_primary"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_left"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bg_primary_circle"
                    app:srcCompat="@drawable/ic_icon_arrow" />

                <LinearLayout
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_p1_profile"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/image_defult_profile"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="@dimen/_2sdp" />

                    <TextView
                        android:id="@+id/tv_my_bio"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="2"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_right"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_primary_circle"
                    android:rotationY="180"
                    app:srcCompat="@drawable/ic_icon_arrow" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_lnr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/profileLay"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:weightSum="7">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_green"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_green_ring" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_yellow"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_yellow_ring" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_red"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_red_ring_2" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/text_lnr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:weightSum="7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/txt_go"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/Go"
                android:fontFamily="@font/franklin_gothic_reg"
                android:textColor="@color/green_ring" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/txt_caution"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/caution"
                android:fontFamily="@font/franklin_gothic_reg"
                android:textColor="@color/yellow_ring" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/txt_stop"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/stop"
                android:fontFamily="@font/franklin_gothic_reg"
                android:textColor="@color/red_ring" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_title"
        style="@style/txt_event_green_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/background_f2_description"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:text="@string/myprofile"
        android:visibility="gone"
        android:fontFamily="@font/frank_book"
        android:textSize="@dimen/_14sdp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:visibility="gone"
        android:background="@drawable/bg_pop_gray_image">

        <ImageView
            android:id="@+id/img_p1_profile2"
            android:layout_width="@dimen/profilepic1"
            android:layout_height="@dimen/profilepic1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_white" />

        <!--<ImageView
            android:id="@+id/img_p1_profile"
            android:layout_width="@dimen/profilepic"
            android:layout_height="@dimen/profilepic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_blue_ring2"
            android:padding="@dimen/_4sdp" />-->

        <TextView
            android:id="@+id/txt_my_details"
            style="@style/popUpbottomtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_p1_profile2"
            android:text="@string/DetailMy" />

    </RelativeLayout>


</LinearLayout>