<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.scenekey.fragment.Profile_Fragment">

<View
    android:id="@+id/top_status"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:visibility="gone"
    android:background="@color/black"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listViewFragProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <TextView
        android:id="@+id/txt_dimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black70p"
        android:text="f \n  f"
        android:textColor="@color/transparent"
        android:textSize="@dimen/_300sdp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_1sdp"
        android:src="@drawable/cross_primary"
        android:visibility="gone" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_profile_pic2"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_115sdp"
        android:alpha="0"
        android:src="@drawable/image_defult_profile"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/_3sdp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_left"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_175sdp"
        android:background="@drawable/bg_primary_circle"
        app:srcCompat="@drawable/ic_icon_arrow"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_right"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_175sdp"
        android:background="@drawable/bg_primary_circle"
        android:rotation="180"
        app:srcCompat="@drawable/ic_icon_arrow"
        android:visibility="gone" />

</RelativeLayout>


</LinearLayout>